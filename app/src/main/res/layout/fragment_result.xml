<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.ResultFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/resultAnimView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.305" />

    <TextView
        android:id="@+id/scoreRemarksTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Congratulations!!"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/resultAnimView"
        app:layout_constraintStart_toStartOf="@+id/resultAnimView"
        app:layout_constraintTop_toBottomOf="@+id/resultAnimView" />

    <TextView
        android:id="@+id/scoreRemarksDescTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="You scored 13/15. Not bad.\nKeep nailing!"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textSize="15sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scoreRemarksTv" />

    <Button
        android:id="@+id/returnToHomeBtn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="@string/return_to_home"
        android:textAllCaps="true"
        android:layout_margin="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scoreRemarksDescTv" />

</androidx.constraintlayout.widget.ConstraintLayout>